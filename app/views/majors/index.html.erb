<div class="box box-primary">
  <div class="box-body box-profile">
    <h2 class="text-center"><%= @university.name %></h2>
    <table class="table table-bordered margin-0">
      <thead>
        <tr>
          <th class="center"><%= t "major.code" %></th>
          <th class="center"><%= t "major.name" %></th>
          <th class="center"><%= t "major.target" %></th>
          <th class="center"><%= t "major.group_exam" %></th>
          <th class="center"><%= t "major.action" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @majors %>
      </tbody>
    </table>
  </div>
</div>
