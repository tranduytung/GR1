<header class="main-header">
  <!-- Logo -->
  <%= link_to root_path, class: "logo" do %>
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>TDH</b></span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Trường Đại Học</b></span>
  <% end %>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <% if university_signed_in? %>
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs"><%= current_university.code %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header-tung">
                <p><%= current_university.name %><br>
                </p>
              </li>
              <li class="user-body">
                <div class="row">
                  <div class="col-xs-6 text-center">
                    <%= link_to t(:profile), university_path(current_university),
                      class: "" %>
                  </div>
                  <div class="col-xs-6 text-center">
                    <%= link_to t(:edit_profile), edit_university_registration_path,
                    class: ""%>
                  </div>
                </div>
                  <!-- /.row -->
                </li>
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-right">
                  <%= link_to t(:log_out), destroy_university_session_path,
                    method: "delete", class: "btn btn-default btn-flat"%>
                </div>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('university.log_in'), new_university_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
