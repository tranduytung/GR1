<header class="main-header">
  <!-- Logo -->
  <%= link_to root_path, class: "logo" do %>
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>TS</b></span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Th√≠ Sinh</b></span>
  <% end %>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <% if examinee_signed_in? %>
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs"><%= current_examinee.name %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header-tung">
                <p>
                  <%= t("examinee.people_id") %>:
                  <%= current_examinee.people_id %><br>
                  <small><%= current_examinee.birthday.to_date %></small>
                </p>
              </li>
              <li class="user-body">
                <div class="row">
                  <div class="col-xs-6 text-center">
                    <%= link_to t(:profile), examinee_path(current_examinee),
                      class: "" %>
                  </div>
                  <div class="col-xs-6 text-center">
                    <%= link_to t(:edit_profile), edit_examinee_registration_path,
                    class: ""%>
                  </div>
                </div>
                  <!-- /.row -->
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                  <div class="pull-right">
                    <%= link_to t(:log_out), destroy_examinee_session_path,
                      method: "delete", class: "btn btn-default btn-flat"%>
                  </div>
                </li>
              </ul>
            </li>
        <% else %>
          <li><%= link_to t('examinee.log_in'), new_examinee_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
