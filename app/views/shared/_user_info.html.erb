<section class="user_info">
  <h1>
    Name: <%= @examinee.name %>
  </h1>
  <hr>

  <% if current_cluster %>
  <div class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <%= t :manage %><b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
    <li>
      <%= link_to edit_cluster_examinee_path(current_cluster, @examinee) do %>
      <span><%= t :edit %></span>
    <% end %>
    </li>
    <li class="divider"></li>
      <li>
        <%= link_to "", method: :delete, data: {confirm: t("warning.delete")} do %>
      <span><%= t :delete %></span>
    <% end %>
      </li>
    </ul>
  </div>
  <% else %>
    <%= link_to edit_examinee_registration_path,
      class: "btn btn-info btn-block" do %>
      <span><%= t :edit %></span>
    <% end %>
  <% end %>

  <div class="list-group">
    <div class="list-group-item">
      <span class=" glyphicon glyphicon-asterisk"></span>
      Cluster: <%= @examinee.cluster.name %>
    </div>
    <div class="list-group-item">
      <span class="glyphicon glyphicon-user"></span>
      People ID: <%= @examinee.people_id %>
    </div>
    <div class="list-group-item">
      <span class="glyphicon glyphicon-credit-card"></span>
      Student ID: <%= @examinee.student_id %>
    </div>
    <div class="list-group-item">
      <span class="glyphicon glyphicon-envelope"></span>
      Email: <%= @examinee.email %>
    </div>
    <div class="list-group-item">
      <span class=" glyphicon glyphicon-earphone"></span>
      Phone: <%= @examinee.phone %>
    </div>
    <div class="list-group-item">
      <span class="glyphicon glyphicon-envelope"></span>
      Birthday: <%= @examinee.birthday %>
    </div>
    <div class="list-group-item">
      <span class="glyphicon glyphicon-home"></span>
      Home_town: <%= @examinee.home_town %>
    </div>
    <div class="list-group-item">
      <span class="glyphicon glyphicon-book"></span>
      Hight_school: <%= @examinee.hight_school %>
    </div>
  </div>
</section>