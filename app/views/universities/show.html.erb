<div class="row">
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <h3 class="text-center">
          <%= t("university.name") %>: <%= @university.name %>
        </h3>
        <div class="list-group list-group-unbordered">
          <div class="list-group-item">
            <span class="glyphicon glyphicon-user"></span>
            <%= t("university.code") %>: <%= @university.code %>
          </div>
          <div class="list-group-item">
            <span class="glyphicon glyphicon-envelope"></span>
            <%= t("university.email") %>: <%= @university.email %>
          </div>
          <div class="list-group-item">
            <span class="glyphicon glyphicon-earphone"></span>
            <%= t("university.phone") %>: <%= @university.phone %>
          </div>
          <div class="list-group-item">
            <span class="glyphicon glyphicon-asterisk"></span>
            <%= t("university.address") %>: <%= @university.address %>
          </div>
          <div class="list-group-item">
            <span class="glyphicon glyphicon-inbox"></span>
            <%= t("university.web_site") %>: <%= @university.web_site %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <div class="list-group list-group-unbordered">
        <% if university_signed_in? %>
          <div class="list-group-item">
            <%= link_to t("university.manage_major"),
              universities_majors_path, class: "btn btn-success" %>
          </div>
          <div class="list-group-item">
            <%= link_to t("university.manage_registers"),
              universities_registers_path, class: "btn btn-success" %>
          </div>
          <div class="list-group-item">
            <%= link_to t("university.recomment_benchmarks"),
              recomment_benchmarks_universities_majors_path,
              class: "btn btn-success" %>
          </div>
          <div class="list-group-item">
            <%= link_to t("university.manage_benchmarks"),
              universities_benchmarks_path, class: "btn btn-success" %>
          </div>
        <% else %>
          <div class="list-group-item">
            <%= link_to t("major.all"),
              university_majors_path(@university), class: "btn btn-success" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

